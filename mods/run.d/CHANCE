#!/bin/bash -e

################################################################################
#  ChIP-seq QC with CHANCE
#
# IN: $SOURCE/$dir/bowtie/*.bam
# OUT: $OUT/$dir/chance/
################################################################################
if [ -n "$RUNCHANCE" ] || [ -n "$NGSANE_PIPELINECALL" ]; then
    
    ############################################################################
    # Wether to submit a job or compile a report
    if [ -z "$NGSANE_COMPILE_REPORT" ]; then

        # check if resources are properly defined
        if [ -z "$TASK_CHANCE" ] || [ -z "$NODES_CHANCE" ] || [ -z "$CPU_CHANCE" ] || [ -z "$MEMORY_CHANCE" ] || [ -z "$WALLTIME_CHANCE" ]; then echo -e "\e[91m[ERROR]\e[0m Server misconfigured"; exit 1; fi
    
        $QSUB $ARMED $NGSANE_WAITFORJOB -r -k $CONFIG -t $TASK_CHANCE -i $INPUT_CHANCE -e $ASD.bam \
            -n $NODES_CHANCE -c $CPU_CHANCE -m $MEMORY_CHANCE"G" -w $WALLTIME_CHANCE \
            --command "${NGSANE_BASE}/mods/chance.sh -k $CONFIG -f <FILE> -o $OUT/<DIR>/$TASK_CHANCE"
    
    ############################################################################
    # compile a report for this mod
    elif [ -n "$NGSANE_COMPILE_REPORT" ]; then

        # start a new section for a mod
        NGSANE_REPORT_HEADER "Chance" "$TASK_CHANCE" "chance.sh"

        NGSANE_REPORT_TABLE "$TASK_CHANCE"      \
            "$OUT/<DIR>/$TASK_CHANCE             \
            ".IPstrength"                    \
            "PATTERN:Cumulative % enrichment:grep 'percent_genome_enriched' | head -n 1 | cut -d',' -f 1" \
            "PATTERN:Input scaling factor:grep 'input_scaling_factor,' | head -n 1 | cut -d',' -f 1" \
            "PATTERN:Diff. Enrichment:grep 'differential_percentage_enrichment,' | head -n 1 | cut -d',' -f 1" \
            "PATTERN:FDR (overall):grep 'fdr,' | head -n 1 | cut -d',' -f 1" \
            "PATTERN:FDR (TF normal):grep 'tfbs_normal_fdr,' | head -n 1 | cut -d',' -f 1" \
            "PATTERN:FDR (Histone normal):grep 'histone_normal_fdr,' | head -n 1 | cut -d',' -f 1" \
            "PATTERN:FDR (TF cancer):grep 'tfbs_cancer_fdr,' | head -n 1 | cut -d',' -f 1" \
            "PATTERN:FDR (Histone cancer):grep 'histone_cancer_fdr,' | head -n 1 | cut -d',' -f 1" \
            "FIGURE:Plot1:[FIGURE]"
            "FIGURE:Plot2:[FIGURE]"


        # finish the section
        NGSANE_REPORT_FOOTER  
  
    fi
fi	

	