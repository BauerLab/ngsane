./configure --prefix=/packages/$SOFTWARE/$VERSION --enable-opt --with-url=http://meme.nbcr.net/meme 

# determine perl dependencies
perl scripts/dependencies.pl
# install missing perl modules
cpan install SOAP::Lite SOAP::WSDL WWW::Mechanize XML::LibXML::SAX

# compile software
make && make test
make install

# add databases
wget http://ebi.edu.au/ftp/software/MEME/Databases/motifs/motif_databases.10.3.tgz
wget http://ebi.edu.au/ftp/software/MEME/Databases/gomo/gomo_databases.3.tgz
